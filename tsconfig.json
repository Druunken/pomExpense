{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",  // This tells TypeScript to resolve modules from the root of the project
    "paths": {
      "@/*": [
        "./*" 
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "./PomPomExpense/**/*"
  ]
}
